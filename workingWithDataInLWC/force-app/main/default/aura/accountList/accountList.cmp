<aura:component>
    <aura:attribute name="accounts" type="Object"></aura:attribute>
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <lightning:workspaceAPI aura:id="workspace"/>
    <div class="slds-p-around_small">
        <div class="slds-grid slds-wrap">
            <aura:iteration items="{!v.accounts}" var="account">
                <div class="slds-col slds-size_1-of-3 slds-p-around_small">
                    <lightning:card variant="Narrow" title="{!account.Name}" iconName="standard:account">
                        <aura:set attribute="actions">
                            <lightning:button name="{!account.Id}" label="View Details" variant="brand" onclick="{!c.doRedirect}"></lightning:button>
                        </aura:set>
                        <aura:set attribute="footer">
                            <lightning:badge label="{!account.Website}"/>
                        </aura:set>
                        <p class="slds-p-horizontal_small">
                          Phone :   {!account.Phone}
                        </p>
                        <p class="slds-p-horizontal_small">
                          Industry :  {!account.Industry}
                        </p>
                    </lightning:card>
                    <br/>
                </div>
            </aura:iteration>
        </div>
    </div>
</aura:component>	
